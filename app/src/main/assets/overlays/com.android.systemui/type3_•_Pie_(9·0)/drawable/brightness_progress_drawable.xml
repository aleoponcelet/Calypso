<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@*android:id/background"
        android:gravity="center_vertical|fill_horizontal">
        <shape android:shape="rectangle">
            <size android:height="2.8dp" />
            <corners android:radius="50.0dip" />
            <solid android:color="#20dddddd" />
        </shape>
    </item>
    <item android:id="@*android:id/secondaryProgress"
        android:gravity="center_vertical|fill_horizontal">
        <scale android:scaleWidth="100%">
            <shape android:shape="rectangle">
                <size android:height="2.8dp" />
                <solid android:color="#00000000" />
            </shape>
        </scale>
    </item>
    <item android:id="@*android:id/progress"
        android:gravity="center_vertical|fill_horizontal">
        <scale android:scaleWidth="100%">
            <shape android:shape="rectangle">
                <corners android:radius="50.0dip" />
                <size android:height="2.8dp" />
                <gradient android:startColor="@*android:color/accent_material_dark"  android:centerColor="@*android:color/Purple_700" android:endColor="@*android:color/accent_material_light" />
            </shape>
        </scale>
    </item>
</layer-list>