<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseLauncherTheme" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorPrimary">@*android:color/background_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:keyboardLayout">@*com.google.android.apps.nexuslauncher:layout/search_container_all_apps</item>
        <item name="android:colorEdgeEffect">@*android:color/highlighted_text_dark</item>
    </style>
    <style name="BaseLauncherThemeWithCustomAttrs" parent="@*com.google.android.apps.nexuslauncher:style/BaseLauncherTheme">
        <item name="*com.google.android.apps.nexuslauncher:allAppsScrimColor">@*android:color/background_dark</item>
        <item name="*com.google.android.apps.nexuslauncher:allAppsNavBarScrimColor">@*android:color/background_dark</item>
        <item name="*com.google.android.apps.nexuslauncher:popupColorPrimary">@*android:color/material_grey_850</item>
        <item name="*com.google.android.apps.nexuslauncher:popupColorSecondary">@*android:color/accent_material_dark</item>
        <item name="*com.google.android.apps.nexuslauncher:popupColorTertiary">@*android:color/highlighted_text_dark</item>
        <item name="*com.google.android.apps.nexuslauncher:isMainColorDark">true</item>
        <item name="*com.google.android.apps.nexuslauncher:isWorkspaceDarkText">false</item>
        <item name="*com.google.android.apps.nexuslauncher:workspaceTextColor">@android:color/white</item>
        <item name="*com.google.android.apps.nexuslauncher:workspaceShadowColor">#b0000000</item>
        <item name="*com.google.android.apps.nexuslauncher:workspaceAmbientShadowColor">#33000000</item>
        <item name="*com.google.android.apps.nexuslauncher:workspaceKeyShadowColor">#44000000</item>
        <item name="*com.google.android.apps.nexuslauncher:workspaceStatusBarScrim">@*com.google.android.apps.nexuslauncher:drawable/workspace_bg</item>
        <item name="*com.google.android.apps.nexuslauncher:widgetsTheme">@*com.google.android.apps.nexuslauncher:style/WidgetContainerTheme</item>
    </style>
    <style name="LauncherThemeDarkText" parent="@*com.google.android.apps.nexuslauncher:style/LauncherTheme">
        <item name="*com.google.android.apps.nexuslauncher:isWorkspaceDarkText">false</item>
        <item name="*com.google.android.apps.nexuslauncher:workspaceTextColor">#ffffffff</item>
        <item name="*com.google.android.apps.nexuslauncher:workspaceShadowColor">@*android:color/transparent</item>
        <item name="*com.google.android.apps.nexuslauncher:workspaceAmbientShadowColor">@*android:color/transparent</item>
        <item name="*com.google.android.apps.nexuslauncher:workspaceKeyShadowColor">@*android:color/transparent</item>
        <item name="*com.google.android.apps.nexuslauncher:workspaceStatusBarScrim">@null</item>
    </style>
    <style name="LauncherThemeDark" parent="@*com.google.android.apps.nexuslauncher:style/LauncherTheme">
        <item name="android:textColorPrimary">#ffffffff</item>
        <item name="android:textColorSecondary">#ffffffff</item>
        <item name="android:textColorHint">#a0ffffff</item>
        <item name="android:textColorTertiary">#ccffffff</item>
        <item name="android:colorControlHighlight">#a0ffffff</item>
        <item name="android:colorPrimary">@*android:color/background_dark</item>
        <item name="*com.google.android.apps.nexuslauncher:allAppsScrimColor">@*android:color/background_dark</item>
        <item name="*com.google.android.apps.nexuslauncher:allAppsNavBarScrimColor">@*android:color/background_dark</item>
        <item name="*com.google.android.apps.nexuslauncher:popupColorPrimary">@*android:color/material_grey_850</item>
        <item name="*com.google.android.apps.nexuslauncher:popupColorSecondary">@*android:color/accent_material_dark</item>
        <item name="*com.google.android.apps.nexuslauncher:popupColorTertiary">@*android:color/accent_material_dark</item>
        <item name="*com.google.android.apps.nexuslauncher:isMainColorDark">true</item>
        <item name="*com.google.android.apps.nexuslauncher:widgetsTheme">@*com.google.android.apps.nexuslauncher:style/WidgetContainerTheme.Dark</item>
    </style>
    <style name="WidgetContainerTheme" parent="@*android:style/Theme.DeviceDefault.Settings.Dark.NoActionBar">
        <item name="android:textColorPrimary">@*android:color/accent_material_dark</item>
        <item name="android:textColorSecondary">#ffffffff</item>
        <item name="android:colorEdgeEffect">@*android:color/highlighted_text_dark</item>
    </style>
</resources>
