<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@*com.android.settings:dimen/sim_content_padding">

        <LinearLayout
            android:gravity="center"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:selectable="false">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@*com.android.settings:drawable/bootleg_nice_logo"
                android:adjustViewBounds="true"
                android:scaleType="centerInside" />
        </LinearLayout>


        <!-- Zip name? -->
        <TextView
            style="@*com.android.settings:style/device_info_dialog_label"
            android:id="@*com.android.settings:id/bootleggers_buildzip_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@*com.android.settings:string/bootleggers_version"/>
        <TextView
            style="@*com.android.settings:style/device_info_dialog_value"
            android:id="@*com.android.settings:id/bootleggers_buildzip_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Build date, parsed? -->
        <TextView
            style="@*com.android.settings:style/device_info_dialog_label"
            android:id="@*com.android.settings:id/bootleggers_build_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@*com.android.settings:string/bootleggers_build_date"/>
        <TextView
            style="@*com.android.settings:style/device_info_dialog_value"
            android:id="@*com.android.settings:id/bootleggers_build_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Who to blame -->
        <TextView
            style="@*com.android.settings:style/device_info_dialog_label"
            android:id="@*com.android.settings:id/bootleggers_maintainer_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@*com.android.settings:string/device_maintainer"/>
        <TextView
            style="@*com.android.settings:style/device_info_dialog_value"
            android:id="@*com.android.settings:id/bootleggers_maintainer_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Bootlegers release type -->
        <TextView
            style="@*com.android.settings:style/device_info_dialog_label"
            android:id="@*com.android.settings:id/bootleggers_release_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@*com.android.settings:string/bootleg_ri_title_buildtype"/>
        <TextView
            style="@*com.android.settings:style/device_info_dialog_value"
            android:id="@*com.android.settings:id/bootleggers_release_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- SELinux status -->
        <TextView
            style="@*com.android.settings:style/device_info_dialog_label"
            android:id="@*com.android.settings:id/selinux_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@*com.android.settings:string/selinux_status"/>
        <TextView
            style="@*com.android.settings:style/device_info_dialog_value"
            android:id="@*com.android.settings:id/selinux_status_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Bootlegers musical codename -->
        <TextView
            style="@*com.android.settings:style/device_info_dialog_label"
            android:id="@*com.android.settings:id/bootleggers_musicodename"
            android:layout_width="0.0dp"
            android:layout_height="0.0dp"
            android:text="@*com.android.settings:string/bootleg_ri_title_musicode"/>
        <TextView
            style="@*com.android.settings:style/device_info_dialog_value"
            android:id="@*com.android.settings:id/bootleggers_musicodename_value"
            android:layout_width="0.0dp"
            android:layout_height="0.0dp"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="?android:attr/colorAccent"
            android:clickable="false"/>

    </LinearLayout>
</ScrollView>