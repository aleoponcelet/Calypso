<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.IAPTheme" parent="@*android:style/Theme">
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="AppBaseTheme" parent="@*android:style/Theme" />
    <style name="Platform.AppCompat.Light" parent="@*android:style/Theme.Material">
        <item name="android:colorBackground">@*android:color/background_dark</item>
        <item name="android:windowBackground">@*android:color/background_dark</item>
    </style>

    <style name="ConversationMessage">
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="ConversationMessageTimestamp">
        <item name="android:background">@*android:color/transparent</item>
    </style>
    <style name="ConversationMessageStatus">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@*android:color/transparent</item>
    </style>
    <style name="ConversationMessageInfo">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@*android:color/transparent</item>
    </style>

    <style name="BugleTheme" parent="@*com.google.android.apps.messaging:style/BugleBaseTheme">
        <item name="android:textColorHighlight">@*com.google.android.apps.messaging:color/text_highlight_color</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="*com.google.android.apps.messaging:c2oItemBackground">@*com.google.android.apps.messaging:color/google_blue_grey_50</item>
        <item name="*com.google.android.apps.messaging:actionBarStyle">@*com.google.android.apps.messaging:style/BugleActionBar</item>
        <item name="*com.google.android.apps.messaging:actionBarWidgetTheme">@*com.google.android.apps.messaging:style/BuglePlacePickerSearchViewStyle</item>
        <item name="*com.google.android.apps.messaging:colorPrimary">@*android:color/background_dark</item>
        <item name="*com.google.android.apps.messaging:colorPrimaryDark">@*android:color/background_dark</item>
        <item name="*com.google.android.apps.messaging:colorAccent">@*android:color/accent_material_dark</item>
    </style>
    <style name="Base.TextAppearance.AppCompat.Widget.Button.Borderless.Colored" parent="@*com.google.android.apps.messaging:style/Base.TextAppearance.AppCompat.Widget.Button">
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="BugleTheme.ConversationActivity" parent="@*com.google.android.apps.messaging:style/BugleToolbarTheme">
        <item name="android:windowBackground">@*android:color/background_dark</item>
        <item name="android:fastScrollPreviewBackgroundLeft">@*com.google.android.apps.messaging:drawable/contacts_fastscroll_label_left</item>
        <item name="android:fastScrollPreviewBackgroundRight">@*com.google.android.apps.messaging:drawable/contacts_fastscroll_label_right</item>
        <item name="android:colorEdgeEffect">@*com.google.android.apps.messaging:color/conversation_edge_effect</item>
        <item name="*com.google.android.apps.messaging:windowActionBarOverlay">true</item>
    </style>

    <style name="BugleTheme.ConversationListActivity" parent="@*com.google.android.apps.messaging:style/BugleToolbarTheme.BigTitle">
        <item name="android:windowBackground">@*android:color/background_dark</item>
    </style>
    <style name="BugleTheme.ArchivedConversationListActivity" parent="@*com.google.android.apps.messaging:style/BugleToolbarTheme">
        <item name="android:windowBackground">@*android:color/background_dark</item>
        <item name="*com.google.android.apps.messaging:colorPrimary">@*com.google.android.apps.messaging:color/archived_conversation_action_bar_background_color</item>
        <item name="*com.google.android.apps.messaging:colorPrimaryDark">@*com.google.android.apps.messaging:color/archived_conversation_action_bar_background_color_dark</item>
    </style>
    <style name="Base.Theme.AppCompat.Light.DarkActionBar" parent="@*com.google.android.apps.messaging:style/Base.Theme.AppCompat.Light">
        <item name="*com.google.android.apps.messaging:actionBarPopupTheme">@*com.google.android.apps.messaging:style/ThemeOverlay.AppCompat.Light</item>
        <item name="*com.google.android.apps.messaging:actionBarTheme">@*com.google.android.apps.messaging:style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="*com.google.android.apps.messaging:actionBarWidgetTheme">@null</item>
        <item name="*com.google.android.apps.messaging:listChoiceBackgroundIndicator">@*com.google.android.apps.messaging:drawable/abc_list_selector_holo_dark</item>
        <item name="*com.google.android.apps.messaging:colorPrimary">@*android:color/accent_material_dark</item>
        <item name="*com.google.android.apps.messaging:colorPrimaryDark">@*android:color/accent_material_dark</item>
    </style>
    <style name="Base.Widget.AppCompat.ActionBar.Solid" parent="@*com.google.android.apps.messaging:style/Base.Widget.AppCompat.ActionBar">
        <item name="*com.google.android.apps.messaging:background">@*android:color/transparent</item>
        <item name="*com.google.android.apps.messaging:backgroundStacked">@*android:color/accent_material_dark</item>
        <item name="*com.google.android.apps.messaging:backgroundSplit">@*android:color/accent_material_dark</item>
    </style>
    <style name="Base.Widget.AppCompat.Light.ActionBar.Solid" parent="@*com.google.android.apps.messaging:style/Base.Widget.AppCompat.Light.ActionBar">
        <item name="*com.google.android.apps.messaging:background">@*android:color/transparent</item>
        <item name="*com.google.android.apps.messaging:backgroundStacked">@*android:color/accent_material_dark</item>
        <item name="*com.google.android.apps.messaging:backgroundSplit">@*android:color/accent_material_dark</item>
    </style>
    <style name="BugleToolbarTheme" parent="@*com.google.android.apps.messaging:style/BugleBaseToolbarTheme">
        <item name="android:textColorHighlight">@*android:color/highlighted_text_holo_dark</item>
        <item name="*com.google.android.apps.messaging:c2oItemBackground">@*com.google.android.apps.messaging:color/google_blue_grey_50</item>
        <item name="*com.google.android.apps.messaging:actionBarStyle">@*com.google.android.apps.messaging:style/BugleToolbar</item>
        <item name="*com.google.android.apps.messaging:actionBarWidgetTheme">@*com.google.android.apps.messaging:style/BuglePlacePickerSearchViewStyle</item>
        <item name="*com.google.android.apps.messaging:colorPrimary">@*com.google.android.apps.messaging:color/action_bar_background_color</item>
        <item name="*com.google.android.apps.messaging:colorPrimaryDark">@*com.google.android.apps.messaging:color/action_bar_background_color_dark</item>
        <item name="*com.google.android.apps.messaging:colorAccent">@*android:color/accent_material_dark</item>
    </style>
    <style name="BugleM2Theme.ConversationListActivity" parent="@*com.google.android.apps.messaging:style/BugleToolbarM2Theme.Lockup">
        <item name="android:windowBackground">@android:color/background_dark</item>
    </style>
    <style name="ZeroStateSearchToolbarSubTitleTextStyle">
        <item name="android:textSize">@*com.google.android.apps.messaging:dimen/zero_state_toolbar_subtitle_size</item>
        <item name="android:textColor">#cccccc</item>
        <item name="android:fontFamily">@*com.google.android.apps.messaging:font/google_sans_medium</item>
    </style>
    <style name="ZeroStateSearchToolbarTitleTextStyle">
        <item name="android:textSize">@*com.google.android.apps.messaging:dimen/zero_state_toolbar_title_size</item>
        <item name="android:textColor">#fafafa</item>
        <item name="android:fontFamily">@*com.google.android.apps.messaging:font/google_sans</item>
    </style>

</resources>
