<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Platform.AppCompat.Light" parent="@android:style/Theme.Material">
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorPrimary">@*android:color/transparent</item>
        <item name="android:colorPrimaryDark">@*android:color/transparent</item>
        <item name="android:colorAccent">@*android:color/accent_material_dark</item>
    </style>

    <style name="ColorAccentBlueOverrideStyle"><item name="android:colorAccent">@*android:color/accent_material_dark</item></style>

    <style name="BugleTheme" parent="@*com.android.messaging:style/BugleBaseTheme">
         <item name="android:colorPrimary">@*android:color/background_dark</item>
         <item name="android:colorPrimaryDark">@*android:color/transparent</item>
         <item name="android:colorAccent">@*android:color/accent_material_dark</item>
    </style>

    <style name="BugleTheme.ArchivedConversationListActivity" parent="@*com.android.messaging:style/BugleTheme">
        <item name="android:windowBackground">@*android:color/background_dark</item>
        <item name="android:colorPrimary">@*android:color/background_dark</item>
        <item name="android:colorPrimaryDark">@*android:color/transparent</item>
    </style>

    <style name="BugleTheme.ConversationListActivity" parent="@*com.android.messaging:style/BugleTheme">
        <item name="android:windowBackground">@*android:color/background_dark</item>
    </style>

    <style name="BugleTheme.ConversationActivityBase" parent="@*com.android.messaging:style/BugleTheme">
        <item name="android:windowBackground">@*android:color/background_dark</item>
    </style>

</resources>