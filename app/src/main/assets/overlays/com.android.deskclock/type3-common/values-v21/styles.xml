<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.DeskClock" parent="@*com.android.deskclock:style/Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@*android:color/background_dark</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="*com.android.deskclock:colorAccent">@*android:color/accent_material_dark</item>
        <item name="*com.android.deskclock:colorBackgroundFloating">@*android:color/holo_purple</item>
        <item name="*com.android.deskclock:colorControlActivated">@android:color/white</item>
        <item name="*com.android.deskclock:colorControlNormal">@*android:color/accent_material_dark</item>
        <item name="*com.android.deskclock:colorPrimaryDark">@*android:color/transparent</item>
        <item name="*com.android.deskclock:imageButtonStyle">@*com.android.deskclock:style/Widget.ImageButton</item>
        <item name="*com.android.deskclock:popupTheme">@*com.android.deskclock:style/ThemeOverlay.Popup</item>
    </style>
    <style name="Platform.AppCompat" parent="@*android:style/Theme.DeviceDefault.Settings.Dark.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:backgroundTint">@*android:color/background_dark</item>
        <item name="android:colorPrimary">@*android:color/transparent</item>
        <item name="android:colorAccent">@*android:color/accent_material_dark</item>
    </style>
    <style name="Platform.AppCompat.Light" parent="@*android:style/Theme.DeviceDefault.Settings.Dark.NoActionBar">
        <item name="android:backgroundTint">@*android:color/background_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="TextAppearance.StatusBar.EventContent" parent="">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColor">#d9ffffff</item>
        <item name="android:textAppearance">@*android:style/TextAppearance.Material.Small</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="TextAppearance.StatusBar.EventContent.Title" parent="">
        <item name="android:textSize">18.0dip</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textAppearance">@*android:style/TextAppearance.Material.Small</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
